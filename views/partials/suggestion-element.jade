.suggestion-element
	.suggestion
		.suggestion-text
			p <b>Suggestion: </b>#{suggestionText || 'No suggestion text'}
		.suggestion-category
			p <b>Problem: </b>#{suggestionProblem} <b>Category: </b>#{problemCategory}
	.suggestion-maker
		if headshot
			img(src=headshot height="50" width="50")
		else
			img(src="/avatar.png" height="50" width="50")
		div.userName #{accountName || user.username}