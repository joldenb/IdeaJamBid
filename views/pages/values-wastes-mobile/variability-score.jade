doctype html
html
  head
    include ../../partials/head.jade
  body
    .header.navbar.navbar-default
        include ../../partials/header.jade
    .container-fluid.scoreIdea
      .row
        .col-xs-2
          img.viability-icon(src="/" + viabilityIcon + ".png")
        .col-xs-8.viability-title-link
          h2 Variability
          img(src="/question-mark.png")
        .col-xs-2
          a.close-viability(href="/view-all-viabilities")
            img(src="/close_button.png" height="30" width="30")
      .row
        form.mobile-viability-form(role='form', id="formVariability" action="/variability-mobile", method="post",  data-idea-doc=idea)
          h4.viability-question.mobile-viability-help-text
            | Will use or production of the #{idea.name} change based upon specific scenarios or circumstances when solving the problem of #{idea.problem}?
          br
          input(type="hidden", name="nextLink", value="#{nextLink}")
          input(type="hidden", name="_csrf", value="#{csrfToken}")
          .slider-container
            .slider-end-labels
              span.no-way Consistent
              span.yes-way Erratic
            .sliderLabel
            #slider.waste-score
          .save-buttons
            .row
              a.btn.btn-industry.btn-lg Describe an Imperfection
            .row
              .col-xs-6
                button.btn.btn-vision.btn-lg #{bailButtonText}
              .col-xs-6
                button.btn.btn-success.btn-lg Skip

  
  include ../../partials/js-includes.jade
  script(type="text/javascript").
    var labelArr = _.range(101).map(function(number){
      return number.toString();
    });
    var initialValue, min=1, max=100, valueEntered = false;
    initialValue = '#{currentReview.variabilityOne}' || 50;

    ////////////////////////////////////////////
    // SET UP SLIDER ONE
    ////////////////////////////////////////////
    $("#slider").slider({
      value: initialValue,
      min: min,
      max: max,
      step: 1,
      slide: function( event, ui ) {
          valueEntered = true;
          $(".save-buttons .btn-success").text("#{nextButtonText}");
          $(".sliderLabel").text(labelArr[ui.value]);
          $(".sliderLabel").css("margin-left", (ui.value +2-min)/(max-min)*100+"%");
          $(".sliderLabel").css("left", "-50px");
      }
    });
    if('#{currentReview.variabilityOne}' != ""){
      $(".save-buttons .btn-success").text("#{nextButtonText}");
      $(".sliderLabel").text(labelArr[initialValue]);
      $(".sliderLabel" ).css("margin-left", (initialValue  -1 + 2)/(max-min)*100+"%");
      $(".sliderLabel").css("left", "-50px");
    }

    $('#slider').draggable();

    $("button.btn-success").click(function(event){
      if(valueEntered){
        var sliderOneValue = $("#slider").slider("value");
        var inputOne = $("<input>")
               .attr("type", "hidden")
               .attr("name", "variabilitySliderOneValue").val(sliderOneValue);
        $('#formVariability').append($(inputOne)).submit();
      } else {
        $('#formVariability').submit();
      }
    });

    $("a.btn.btn-industry.btn-lg").click(function(event){
      event.preventDefault();
      
      if(valueEntered){
        $.post('/variability-mobile', 
        {
          _csrf : $('[name="_csrf"]').val(),
          "nextLink" : $("[name='nextLink']").val(),
          "variabilitySliderOneValue" : $("#slider").slider("value")
        },
        function(data, response) {
          window.location = '/variability-problem';
        });
      } else {
        window.location = '/variability-problem';
      }
    })

    
    $(".viability-title-link").click(function(event){
      if($(".mobile-viability-help-text").is(":visible")){
        $(".mobile-viability-help-text").hide(300);
      } else {
        $(".mobile-viability-help-text").show(300);
      }
    });

    $(".btn.btn-vision").click(function(event){
      event.preventDefault();
      window.location = '/view-all-viabilities';
    })

