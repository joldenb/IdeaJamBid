doctype html
html
  head
    include ../../partials/head.jade
  body
    .container-fluid.scoreIdea
      .row
        .col-xs-2
          img.viability-icon(src="/" + viabilityIcon + ".png")
        .col-xs-8.viability-title-link
          h2 Performability
          img(src="/question-mark.png")
        .col-xs-2
          a.close-viability(href="/view-all-viabilities")
            img(src="/close_button.png" height="30" width="30")
      .row
        form.mobile-viability-form(role='form', id="formPerformability" action="/performability-mobile", method="post", data-idea-doc=idea)
          h4.viability-question.mobile-viability-help-text
            | Will the #{idea.name} effectively work to solve the problem of #{idea.problem}?
          br
          input(type="hidden", name="_csrf", value="#{csrfToken}")
          .slider-container
            .slider-end-labels
              span.no-way Incapable
              span.yes-way Effective
            .sliderLabel
            #slider
          .save-buttons
            .row
              a.btn.btn-industry.btn-lg Describe an Imperfection
            .row
              .col-xs-6
                button.btn.btn-vision.btn-lg View All
              .col-xs-6
                button.btn.btn-success.btn-lg Continue

  
  include ../../partials/js-includes.jade
  script(type="text/javascript").
    var labelArr = _.range(101).map(function(number){
      return number.toString();
    });
    var initialValue, min=1, max=100, valueEntered = false;
    initialValue = '#{currentReview.performOne}' || 50;

    ////////////////////////////////////////////
    // SET UP SLIDER ONE
    ////////////////////////////////////////////
    $("#slider").slider({
      value: initialValue,
      min: min,
      max: max,
      step: 1,
      slide: function( event, ui ) {
          valueEntered = true;
          $(".sliderLabel").text(labelArr[ui.value]);
          $(".sliderLabel").css("margin-left", (ui.value-min)/(max-min)*100+"%");
          $(".sliderLabel").css("left", "-50px");
      }
    });
    $(".sliderLabel").text(labelArr[initialValue]);
    $(".sliderLabel" ).css("margin-left", (initialValue -1)/(max-min)*100+"%");
    $(".sliderLabel").css("left", "-50px");

    $('#slider').draggable();

    $("button.btn-success").click(function(event){
      if(valueEntered){
        var sliderOneValue = $("#slider").slider("value");
        var inputOne = $("<input>")
               .attr("type", "hidden")
               .attr("name", "perfSliderOneValue").val(sliderOneValue);
        $('#formPerformability').append($(inputOne)).submit();
      } else {
        $('#formPerformability').submit();
      }
    });

    $("a.btn.btn-industry.btn-lg").click(function(event){
      event.preventDefault();
      
      if(valueEntered){
        $.post('/performability-mobile', 
        {
          _csrf : $('[name="_csrf"]').val(),
          "perfSliderOneValue" : $("#slider").slider("value")
        },
        function(data, response) {
          window.location = '/performability-problem';
        });
      } else {
        window.location = '/performability-problem';
      }
    })

    
    $(".viability-title-link").click(function(event){
      if($(".mobile-viability-help-text").is(":visible")){
        $(".mobile-viability-help-text").hide(300);
      } else {
        $(".mobile-viability-help-text").show(300);
      }
    });

    $(".btn.btn-vision").click(function(event){
      event.preventDefault();
      window.location = '/view-all-viabilities';
    })

