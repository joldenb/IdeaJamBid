doctype html
html
  head
    include ../../partials/head.jade
  body
    .container-fluid.scoreIdea
      .row
        .col-xs-2
          img.viability-icon(src="/" + viabilityIcon + ".png")
        .col-xs-8
          h2 Sensitivity
        .col-xs-2
          a.close-viability(href="/view-all-viabilities")
            img(src="/close_button.png" height="30" width="30")
      .row
        form.mobile-viability-form(role='form', id="formSensitivity" action="/sensitivity-mobile", method="post",  data-idea-doc=idea)
          h4.viability-question
            | Will usage or the environment easily disturb or damage the #{idea.name} while solving the problem of #{idea.problem}?
          br
          input(type="hidden", name="_csrf", value="#{csrfToken}")
          .slider-container
            .slider-end-labels
              span.no-way Reliable
              span.yes-way Fragile
            .sliderLabel
            #slider
          .save-buttons
            a.btn.btn-industry.btn-lg Describe an Imperfection
            button.btn.btn-success.btn-lg Save

  
  include ../../partials/js-includes.jade
  script(type="text/javascript").
    var labelArr = _.range(101).map(function(number){
      return number.toString();
    });
    var initialValue, min=1, max=100, valueEntered = false;
    initialValue = '#{currentReview.sensitivityOne}' || 50;

    ////////////////////////////////////////////
    // SET UP SLIDER ONE
    ////////////////////////////////////////////
    $("#slider").slider({
      value: initialValue,
      min: min,
      max: max,
      step: 1,
      slide: function( event, ui ) {
          valueEntered = true;
          $(".sliderLabel").text(labelArr[ui.value]);
          $(".sliderLabel").css("margin-left", (ui.value-min)/(max-min)*100+"%");
          $(".sliderLabel").css("left", "-50px");
      }
    });
    $(".sliderLabel").text(labelArr[initialValue]);
    $(".sliderLabel" ).css("margin-left", (initialValue -1)/(max-min)*100+"%");
    $(".sliderLabel").css("left", "-50px");

    $("button.btn-success").click(function(event){
      if(valueEntered){
        var sliderOneValue = $("#slider").slider("value");
        var inputOne = $("<input>")
               .attr("type", "hidden")
               .attr("name", "sensitivitySliderOneValue").val(sliderOneValue);
        $('#formSensitivity').append($(inputOne)).submit();
      } else {
        $('#formSensitivity').submit();
      }
    });

    $("a.btn.btn-industry.btn-lg").click(function(event){
      event.preventDefault();
      
      if(valueEntered){
        $.post('/sensitivity-mobile', 
        {
          _csrf : $('[name="_csrf"]').val(),
          "sensitivitySliderOneValue" : $("#slider").slider("value")
        },
        function(data, response) {
          window.location = '/sensitivity-problem';
        });
      } else {
        window.location = '/sensitivity-problem';
      }
    })