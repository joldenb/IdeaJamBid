doctype html
html
  head
    include ../partials/head.jade
  body
  .header
    span.userName Howdy #{user.username}
    |  
    a.home-logout.btn.btn-default( href="/logout" ) Log Out

  .container.scoreIdea
    h1 Sensitivity
    h4 
      | How sensitive is it to pieces being easily disturbed or damaged?
    br
    form(role='form', id="formSensitivity" action="/sensitivity", method="post", style='max-width: 600px;', data-idea-doc=idea)
      .slider-container
        .slider-end-labels
          span.no-way No Way
          span.yes-way Yes Way
        #sensitivityLabelOne.sliderLabel
        #sensitivitySliderOne
      br
      button.btn.btn-success Continue >

  include ../partials/js-includes.jade
  script(type="text/javascript").
    var labelArr = _.range(101).map(function(number){
      return number.toString();
    });
    var initialValue=50, min=1, max=100;

    ////////////////////////////////////////////
    // SET UP SLIDER ONE
    ////////////////////////////////////////////
    $("#sensitivitySliderOne").slider({
      value:initialValue,
      min: min,
      max: max,
      step: 1,
      slide: function( event, ui ) {
          $("#sensitivityLabelOne").text(labelArr[ui.value]);
          $("#sensitivityLabelOne").css("margin-left", (ui.value-min)/(max-min)*100+"%");
          $("#sensitivityLabelOne").css("left", "-50px");
      }
    });
    $("#sensitivityLabelOne").text(labelArr[initialValue]);
    $("#sensitivityLabelOne" ).css("margin-left", (initialValue -1)/(max-min)*100+"%");
    $("#sensitivityLabelOne").css("left", "-50px");

    $("button.btn-success").click(function(event){
      var sliderOneValue = $("#sensitivitySliderOne").slider("value");
      var inputOne = $("<input>")
               .attr("type", "hidden")
               .attr("name", "sensitivitySliderOneValue").val(sliderOneValue);
      $('#formSensitivity').append($(inputOne)).submit();
    });