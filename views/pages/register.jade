doctype html
html
  head
    include ../partials/head.jade
  body
  .container
    h1 Join IdeaJam
    p.lead You can become an IdeaJam member for free without using social media.  
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="firstname", placeholder='First Name' required)
        p (Example: "Elizabeth")
      .form-group
        input.form-control(type='text', name="lastname", placeholder='Last Name' required)
        p (Example: "Smith")
      .form-group
        input.form-control(type='text', name="nickname", placeholder='Nickname' required)
        p (Example: "Liz")
      .form-group
        input.form-control(type='email', name="username", placeholder='Email Address' required)
        p (Example: "lizsmith@email.com")
      .form-group
        input.form-control(type='password', name="password", placeholder='Password' required)
        input(type="hidden", name="_csrf", value="#{csrfToken}")
      button.btn.btn-go(type='submit') Submit
      |  
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
      |  
      h4 #{message}

  include ../partials/js-includes.jade
