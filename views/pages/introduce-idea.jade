doctype html
html
  head
    include ../partials/head.jade
  body
  .header
    span.userName Howdy #{user.username}
    |  
    img(src="./avatar.png" height="75" width="75")
    a.home-logout.btn.btn-default( href="/logout" ) Log Out

  .container
    h1 What's your Idea?
    form(role='form', id="formIntroduceIdea" action="/introduce-idea", method="post", style='max-width: 300px;', data-idea-doc=idea)
      .form-group
        h3 What is the purpose of your idea? (in 1 sentence)
        |  
        textarea.form-control(rows='6', cols="75", name="purposeFor", placeholder='What is your idea for...')
        h3 How will it accomplish this?
        |  
        textarea.form-control(rows='6', cols="75", name="purposeHow", placeholder='How will it...')
      button.btn.btn-success(type='submit') Continue >
      |  

  include ../partials/js-includes.jade