doctype html
html
  head
    include ../partials/head.jade
  body
  .header
    span.userName Howdy #{user.username}
    |  
    a.home-logout.btn.btn-default( href="/logout" ) Log Out

  .container.scoreIdea
    h1 Complexity
    h4 
      | Will the [user-entered] idea include a large number of steps to produce, assemble or ship?
    br
    form(role='form', id="formComplexity" action="/complexity", method="post", style='max-width: 600px;', data-idea-doc=idea)
      .slider-container
        .slider-end-labels
          span.no-way No Way
          span.yes-way Yes Way
        #complexityLabelOne.sliderLabel
        #complexitySliderOne
      br
      button.btn.btn-success Continue >

  include ../partials/js-includes.jade
  script(type="text/javascript").
    var labelArr = _.range(101).map(function(number){
      return number.toString();
    });
    var initialValue=50, min=1, max=100;

    ////////////////////////////////////////////
    // SET UP SLIDER ONE
    ////////////////////////////////////////////
    $("#complexitySliderOne").slider({
      value:initialValue,
      min: min,
      max: max,
      step: 1,
      slide: function( event, ui ) {
          $("#complexityLabelOne").text(labelArr[ui.value]);
          $("#complexityLabelOne").css("margin-left", (ui.value-min)/(max-min)*100+"%");
          $("#complexityLabelOne").css("left", "-50px");
      }
    });
    $("#complexityLabelOne").text(labelArr[initialValue]);
    $("#complexityLabelOne" ).css("margin-left", (initialValue -1)/(max-min)*100+"%");
    $("#complexityLabelOne").css("left", "-50px");

    $("button.btn-success").click(function(event){
      var sliderOneValue = $("#complexitySliderOne").slider("value");
      var inputOne = $("<input>")
               .attr("type", "hidden")
               .attr("name", "complexSliderOneValue").val(sliderOneValue);
      $('#formComplexity').append($(inputOne)).submit();
    });