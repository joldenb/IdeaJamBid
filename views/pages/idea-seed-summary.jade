doctype html
html
  head
    include ../partials/head.jade
  body
  .header
    span.userName Howdy #{user.username}
    |  
    a.home-logout.btn.btn-default( href="/logout" ) Log Out

  .container.idea-summary
    h1 In Summary
      h3 Name : #{idea.name}
      h3 Description : #{idea.description}
      h3 Problem it will address : #{idea.problem}
      h3 Features :
      ul
        li
          h4 #{idea.firstFeature}
        li
          h4 #{idea.secondFeature}
        li
          h4 #{idea.thirdFeature}
      
      a.home-login.btn.btn-success( href="/begin-scoring" ) Score Your Idea >



  include ../partials/js-includes.jade
