doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(rel='stylesheet', href='/stylesheets/main.css')
  body
  .container
    h1 What's your Idea?
    form(role='form', id="formIdeaName" action="/idea-name", method="post", style='max-width: 300px;', data-idea-doc=idea)
      .form-group
        h3 Idea Title
        |  
        input.form-control(type='text', name="title", placeholder='Idea title here...')
        h3 Idea Description
        |  
      .form-group
        textarea.form-control(rows='6', cols="75", name="description", placeholder='Describe your idea...')
      button.btn.btn-success(type='submit') Continue >
      |  

    a.home-login.btn.btn-default( href="/logout" ) Log Out

  script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')