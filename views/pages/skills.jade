doctype html
html
  head
    include ../partials/head.jade
  body
  .header
    span.userName Howdy #{user.username}
    |  
    img(src="./avatar.png" height="75" width="75")
    a.home-logout.btn.btn-default( href="/logout" ) Log Out

  .container.scoreIdea
    h1 Skills Intensive
    h4 
      | Where can we eliminate or reduce the skill needed in production and use of the invention?
    br
    form(role='form', id="formSkills" action="/skills", method="post", style='max-width: 600px;', data-idea-doc=idea)
      .slider-container
        .slider-end-labels
          span.no-way No Way
          span.yes-way Yes Way
        #skillsLabelOne.sliderLabel
        #skillsSliderOne
      br
      button.btn.btn-success Continue >
      br
      br
      h3 Einstein Points: #{user.einsteinPoints}

  include ../partials/js-includes.jade
  script(type="text/javascript").
    var labelArr = _.range(101).map(function(number){
      return number.toString();
    });
    var initialValue=50, min=1, max=100;

    ////////////////////////////////////////////
    // SET UP SLIDER ONE
    ////////////////////////////////////////////
    $("#skillsSliderOne").slider({
      value:initialValue,
      min: min,
      max: max,
      step: 1,
      slide: function( event, ui ) {
          $("#skillsLabelOne").text(labelArr[ui.value]);
          $("#skillsLabelOne").css("margin-left", (ui.value-min)/(max-min)*100+"%");
          $("#skillsLabelOne").css("left", "-50px");
      }
    });
    $("#skillsLabelOne").text(labelArr[initialValue]);
    $("#skillsLabelOne" ).css("margin-left", (initialValue -1)/(max-min)*100+"%");
    $("#skillsLabelOne").css("left", "-50px");

    $("button.btn-success").click(function(event){
      var sliderOneValue = $("#skillsSliderOne").slider("value");
      var inputOne = $("<input>")
               .attr("type", "hidden")
               .attr("name", "skillsSliderOneValue").val(sliderOneValue);
      $('#formSkills').append($(inputOne)).submit();
    });