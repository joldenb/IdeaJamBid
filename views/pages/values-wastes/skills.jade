doctype html
html
  head
    include ../../partials/head.jade
  body
  .header
    span.userName Howdy #{user.username}
    |  
    .profile-headshot
      if headshot
        img.placeholder(src=headshot height="75" width="75")
        a.plus-overlay(href="/profile-picture")
          img(src='/plus-overlay.png' height="75" width="75")
      else  
        img.placeholder(src="/avatar.png" height="75" width="75")
        a.plus-overlay(href="/profile-picture")
          img(src='/plus-overlay.png' height="75" width="75")
    a.home-logout.btn.btn-default( href="/begin" ) My Profile
    | 
    a.home-logout.btn.btn-default( href="/logout" ) Log Out

  .container.scoreIdea
    h1 Skill Intensive
    h4 
      | Will #{idea.name} require many specfic skills to solve [user-entered challenge]?
    br
    form(role='form', id="formSkills" action="/skills", method="post", style='max-width: 600px;', data-idea-doc=idea)
      .slider-container
        .slider-end-labels
          span.no-way Easy to Make and Use
          span.yes-way Many Specific Skills Needed
        #skillsLabelOne.sliderLabel
        #skillsSliderOne
      br
      h4 Recorded problems for skills:
      ul.waste-value-problem-list
        each problem, index in problems
          li
            h4 #{index + 1} : #{problem.text}
      br
      h4 Add a new skills problem:
      textarea.form-control(rows='6', cols="75", name="skillsProblem")
        | The problem of 
      br
      if reviewing
        a(href="/contributor-idea-summary").btn.btn-info View All
      else
        a(href="/idea-summary").btn.btn-info View All
      |  
      |  
      button.btn.btn-success Continue >
      br
      br
      h3 Einstein Points: #{user.einsteinPoints}

  include ../../partials/js-includes.jade
  script(type="text/javascript").
    var labelArr = _.range(101).map(function(number){
      return number.toString();
    });
    var initialValue, min=1, max=100, valueEntered = false;
    initialValue = "#{idea.skillsOne}" || 50;

    ////////////////////////////////////////////
    // SET UP SLIDER ONE
    ////////////////////////////////////////////
    $("#skillsSliderOne").slider({
      value:initialValue,
      min: min,
      max: max,
      step: 1,
      slide: function( event, ui ) {
          valueEntered = true;
          $("#skillsLabelOne").text(labelArr[ui.value]);
          $("#skillsLabelOne").css("margin-left", (ui.value-min)/(max-min)*100+"%");
          $("#skillsLabelOne").css("left", "-50px");
      }
    });
    $("#skillsLabelOne").text(labelArr[initialValue]);
    $("#skillsLabelOne" ).css("margin-left", (initialValue -1)/(max-min)*100+"%");
    $("#skillsLabelOne").css("left", "-50px");

    $("button.btn-success").click(function(event){
        if(valueEntered){
          var sliderOneValue = $("#skillsSliderOne").slider("value");
          var inputOne = $("<input>")
                   .attr("type", "hidden")
                   .attr("name", "skillsSliderOneValue").val(sliderOneValue);
          $('#formSkills').append($(inputOne)).submit();
        } else {
          $('#formSkills').submit();
        }
    });

    var input = document.getElementsByTagName ("textarea");

    // This is for the main solution text input
    var requiredText = "The problem of "
    input[0].addEventListener ("mousedown", function () {
      if (String($(this).val()).indexOf(requiredText) == -1) {
            $(this).val(requiredText);
      }
      if (this.selectionStart < 15) {
        this.selectionStart = 15;
      }
    }, false);

    input[0].addEventListener ("keydown", function () {
      if (String($(this).val()).indexOf(requiredText) == -1) {
            $(this).val(requiredText);
      }
      if (this.selectionStart < 15) {
        this.selectionStart = 15;
      }
    }, false);
    