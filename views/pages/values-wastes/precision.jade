doctype html
html
  head
    include ../../partials/head.jade
  body
  .header
    span.userName Howdy #{user.username}
    |  
    img(src="./avatar.png" height="75" width="75")
    a.home-logout.btn.btn-default( href="/begin" ) My Profile
    | 
    a.home-logout.btn.btn-default( href="/logout" ) Log Out

  .container.scoreIdea
    h1 Precision
    h4 
      | Will #{idea.name} require specific timing, precise sequence or much practice to effectively solve [user-entered challenge]?
    br
    form(role='form', id="formPrecision" action="/precision", method="post", style='max-width: 600px;', data-idea-doc=idea)
      .slider-container
        .slider-end-labels
          span.no-way Minimal Exactness Necessary
          span.yes-way Definite, Meticulous Precision Required 
        #precisionLabelOne.sliderLabel
        #precisionSliderOne
      br
      h4 What prevents #{idea.name} from reducing the precision necessary to solve [user-entered challenege]?
      textarea.form-control(rows='6', cols="75", name="precisionProblem", placeholder='Describe the problem...')
        if idea.precisionProblem
          | #{idea.precisionProblem}
      br
      a(href="/idea-summary").btn.btn-info View All
      |  
      button.btn.btn-success Continue >
      br
      br
      h3 Einstein Points: #{user.einsteinPoints}

  include ../../partials/js-includes.jade
  script(type="text/javascript").
    var labelArr = _.range(101).map(function(number){
      return number.toString();
    });
    var initialValue, min=1, max=100, valueEntered = false;
    initialValue = '#{idea.precisionOne}' || 50;

    ////////////////////////////////////////////
    // SET UP SLIDER ONE
    ////////////////////////////////////////////
    $("#precisionSliderOne").slider({
      value:initialValue,
      min: min,
      max: max,
      step: 1,
      slide: function( event, ui ) {
          valueEntered = true;
          $("#precisionLabelOne").text(labelArr[ui.value]);
          $("#precisionLabelOne").css("margin-left", (ui.value-min)/(max-min)*100+"%");
          $("#precisionLabelOne").css("left", "-50px");
      }
    });
    $("#precisionLabelOne").text(labelArr[initialValue]);
    $("#precisionLabelOne" ).css("margin-left", (initialValue -1)/(max-min)*100+"%");
    $("#precisionLabelOne").css("left", "-50px");

    $("button.btn-success").click(function(event){
      if(valueEntered){
        var sliderOneValue = $("#precisionSliderOne").slider("value");
        var inputOne = $("<input>")
                 .attr("type", "hidden")
                 .attr("name", "precisionSliderOneValue").val(sliderOneValue);
        $('#formPrecision').append($(inputOne)).submit();
      } else {
        $('#formPrecision').submit();
      }
    });