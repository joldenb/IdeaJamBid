doctype html
html
  head
    include ../../partials/head.jade
  body
  .header
    span.userName Howdy #{user.username}
    |  
    img(src="/avatar.png" height="75" width="75")
    a.home-logout.btn.btn-default( href="/begin" ) My Profile
    | 
    a.home-logout.btn.btn-default( href="/logout" ) Log Out

  .container.scoreIdea
    h1 Maintainability
    h4 
      | How easy is #{idea.name} to keep and maintain?
    br
    form(role='form', id="formMaintainability" action="/maintainability", method="post", style='max-width: 600px;', data-idea-doc=idea)
      .slider-container
        .slider-end-labels
          span.no-way Difficult to Maintain
          span.yes-way Easy to Maintain
        #maintainabilityLabelOne.sliderLabel
        #maintainabilitySliderOne
      br
      h4 Recorded problems for maintainability:
      ul.waste-value-problem-list
        each problem, index in problems
          li
            h4 #{index + 1} : #{problem.text}
      br
      h4 Add a new maintainability problem:
      textarea.form-control(rows='6', cols="75", name="maintainProblem")
        | The problem of 
      br
      if reviewing
        a(href="/contributor-idea-summary").btn.btn-info View All
      else
        a(href="/idea-summary").btn.btn-info View All
      |  
      |  
      button.btn.btn-success Continue >
      br
      br
      h3 Einstein Points: #{user.einsteinPoints}

  include ../../partials/js-includes.jade
  script(type="text/javascript").
    var labelArr = _.range(101).map(function(number){
      return number.toString();
    });
    var initialValue, min=1, max=100, valueEntered = false;
    initialValue = '#{idea.maintainOne}' || 50;

    ////////////////////////////////////////////
    // SET UP SLIDER ONE
    ////////////////////////////////////////////
    $("#maintainabilitySliderOne").slider({
      value:initialValue,
      min: min,
      max: max,
      step: 1,
      slide: function( event, ui ) {
          valueEntered = true;
          $("#maintainabilityLabelOne").text(labelArr[ui.value]);
          $("#maintainabilityLabelOne").css("margin-left", (ui.value-min)/(max-min)*100+"%");
          $("#maintainabilityLabelOne").css("left", "-50px");
      }
    });
    $("#maintainabilityLabelOne").text(labelArr[initialValue]);
    $("#maintainabilityLabelOne" ).css("margin-left", (initialValue -1)/(max-min)*100+"%");
    $("#maintainabilityLabelOne").css("left", "-50px");

    $("button.btn-success").click(function(event){
      if(valueEntered){
        var sliderOneValue = $("#maintainabilitySliderOne").slider("value");
        var inputOne = $("<input>")
                 .attr("type", "hidden")
                 .attr("name", "maintainSliderOneValue").val(sliderOneValue);
        $('#formMaintainability').append($(inputOne)).submit();
      } else {
        $('#formMaintainability').submit();
      }
    });

    var input = document.getElementsByTagName ("textarea");

    // This is for the main solution text input
    var requiredText = "The problem of "
    input[0].addEventListener ("mousedown", function () {
      if (String($(this).val()).indexOf(requiredText) == -1) {
            $(this).val(requiredText);
      }
      if (this.selectionStart < 15) {
        this.selectionStart = 15;
      }
    }, false);

    input[0].addEventListener ("keydown", function () {
      if (String($(this).val()).indexOf(requiredText) == -1) {
            $(this).val(requiredText);
      }
      if (this.selectionStart < 15) {
        this.selectionStart = 15;
      }
    }, false);
    