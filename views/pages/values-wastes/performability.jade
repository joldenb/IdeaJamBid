doctype html
html
  head
    include ../../partials/head.jade
  body
  .header
    span.userName Howdy #{user.username}
    |  
    img(src="/avatar.png" height="75" width="75")
    a.home-logout.btn.btn-default( href="/begin" ) My Profile
    | 
    a.home-logout.btn.btn-default( href="/logout" ) Log Out

  form(role='form', id="formPerformability" action="/performability", method="post", style='max-width: 700px;', data-idea-doc=idea)
    .container.scoreIdea
    h1 Performability
    h4
      | Will #{idea.name}, as it is, perform to solve the [user-entered challenge] in an effective way?
    br
    .slider-container
      .slider-end-labels
        span.no-way Low Performability
        span.yes-way High Performability
      #perfLabelOne.sliderLabel
      #perfSliderOne(name="perfSliderOne")
    br
    h4 What limits #{idea.name} from performing optimally?
    textarea.form-control(rows='6', cols="75", name="performProblem", placeholder='Describe the problem...')
        if idea.performProblem
          | #{idea.performProblem}
    br
    a(href="/idea-summary").btn.btn-info View All
    |  
    button.btn.btn-success Continue >
    br
    br
    h3 Einstein Points: #{user.einsteinPoints}

  include ../../partials/js-includes.jade
  script(type="text/javascript").
    var labelArr = _.range(101).map(function(number){
      return number.toString();
    });
    var initialValue, min=1, max=100, valueEntered = false;
    initialValue = '#{idea.performOne}' || 50;

    ////////////////////////////////////////////
    // SET UP SLIDER ONE
    ////////////////////////////////////////////
    $("#perfSliderOne").slider({
      value:initialValue,
      min: min,
      max: max,
      step: 1,
      slide: function( event, ui ) {
          valueEntered = true;
          $("#perfLabelOne").text(labelArr[ui.value]);
          $("#perfLabelOne").css("margin-left", (ui.value-min)/(max-min)*100+"%");
          $("#perfLabelOne").css("left", "-50px");
      }
    });
    $("#perfLabelOne").text(labelArr[initialValue]);
    $("#perfLabelOne" ).css("margin-left", (initialValue -1)/(max-min)*100+"%");
    $("#perfLabelOne").css("left", "-50px");

    $("button.btn-success").click(function(event){
      if(valueEntered){
        var sliderOneValue = $("#perfSliderOne").slider("value");
        var inputOne = $("<input>")
                 .attr("type", "hidden")
                 .attr("name", "perfSliderOneValue").val(sliderOneValue);
        $('#formPerformability').append($(inputOne)).submit();
      } else {
        $('#formPerformability').submit();
      }
    });