doctype html
html
  head
    include ../partials/head.jade
  body
  .container
    h1 Login Page
    if showMessage
      p #{showMessage}
    else
      p.lead Log in to continue
    br
    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='email', name="username", placeholder='Email Address' required)
      .form-group
        input(type="hidden", name="_csrf", value="#{csrfToken}")
        input.form-control(type='password', name="password", placeholder='Password' required)
      button.btn.btn-default(type='submit') Submit
      |  
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
      |  
      a(href="/forgot-password/")
        h4 Forget your password?

  include ../partials/js-includes.jade
