doctype html
html
  head
    include ../partials/head.jade
  body
  .header
    span.userName Howdy #{user.username}
    |  
    img(src="./avatar.png" height="75" width="75")
    a.home-logout.btn.btn-default( href="/begin" ) My Profile
    | 
    a.home-logout.btn.btn-default( href="/logout" ) Log Out

  .container
    h1 What's your Idea?
    form(role='form', id="formIdeaName" action="/idea-name", method="post", style='max-width: 300px;', data-idea-doc=idea)
      .form-group
        h3 Idea Title
        |  
        input.form-control(type='text', name="title", placeholder='Idea title here...')
        h3 Idea Description
        |  
      .form-group
        textarea.form-control(rows='6', cols="75", name="description", placeholder='Describe your idea...')
      button.btn.btn-success(type='submit') Continue >
      |  


  include ../partials/js-includes.jade
