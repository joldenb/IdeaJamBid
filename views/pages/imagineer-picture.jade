            h3 Your Aptitudes : 
            ul
              each aptitude in aptitudes
                li(data-apt-id="#{aptitude.identifier}")
                  p #{aptitude.title}
          if Object.keys(user).length != 0
            form(role='form', id="saveAptitude" action="/save-aptitude", method="post", style='max-width: 300px;', data-idea-doc=idea)
              .form-group
                |  
                input.form-control.ui-front(type='text', id="aptitudeTitle", name="aptitudeTitle", placeholder='What are you good at?', autocomplete="on")
                input(type="hidden", name="_csrf", value="#{csrfToken}")
              .aptitude-footer
                button.btn.btn-go#aptitudeSubmit(type='submit') Save
  .row.edit-profile-view-profile
    .col-md-4.col-xs-1
    .col-md-4.col-xs-10
