doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(rel='stylesheet', href='/stylesheets/main.css')
    link(rel='stylesheet', href='//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css')  
  body
  .header
    span.userName Howdy #{user.username}
    |  
    a.home-logout.btn.btn-default( href="/logout" ) Log Out

  .container.scoreIdea
    h1 Affordability
    h4 
      | Will the cost of the [user-entered] idea enable a user to afford it to solve the [user-entered] problem?
    br
    form(role='form', id="formAffordability" action="/affordability", method="post", style='max-width: 600px;', data-idea-doc=idea)
      .slider-container
        .slider-end-labels
          span.no-way No Way
          span.yes-way Yes Way
        #affordLabelOne.sliderLabel
        #affordSliderOne
      br
      button.btn.btn-success Continue >

  script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
  script(src='//code.jquery.com/ui/1.11.4/jquery-ui.js')
  script(src='http://underscorejs.org/underscore-min.js')  
  script(type="text/javascript").
    var labelArr = _.range(101).map(function(number){
      return number.toString();
    });
    var initialValue=50, min=1, max=100;

    ////////////////////////////////////////////
    // SET UP SLIDER ONE
    ////////////////////////////////////////////
    $("#affordSliderOne").slider({
      value:initialValue,
      min: min,
      max: max,
      step: 1,
      slide: function( event, ui ) {
          $("#affordLabelOne").text(labelArr[ui.value]);
          $("#affordLabelOne").css("margin-left", (ui.value-min)/(max-min)*100+"%");
          $("#affordLabelOne").css("left", "-50px");
      }
    });
    $("#affordLabelOne").text(labelArr[initialValue]);
    $("#affordLabelOne" ).css("margin-left", (initialValue -1)/(max-min)*100+"%");
    $("#affordLabelOne").css("left", "-50px");

    $("button.btn-success").click(function(event){
      var sliderOneValue = $("#affordSliderOne").slider("value");
      var inputOne = $("<input>")
               .attr("type", "hidden")
               .attr("name", "affordSliderOneValue").val(sliderOneValue);
      $('#formAffordability').append($(inputOne)).submit();
    });