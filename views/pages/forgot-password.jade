doctype html
html
  head
    include ../partials/head.jade
  body
  .container
    h1 Forgot Password
    p.lead Enter your email address to receive a reset link
    br
    form(role='form', action="/request-reset-email",method="post", style='max-width: 300px;')
      .form-group
        input#toEmailAddress.form-control(type="email", name="toEmailAddress" placeholder="To:" required)
        input(type="hidden", name="_csrf", value="#{csrfToken}")
      button.btn.btn-default(type='submit') Submit
      |  
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
      |  

  include ../partials/js-includes.jade
