doctype html
html
  head
    include ../partials/head.jade
  body
  .header
    span.userName Howdy #{user.username}
    |  
    a.home-logout.btn.btn-default( href="/logout" ) Log Out

  .container.scoreIdea
    h1 Variability
    h4 
      | Will a user need to change how [user-entered] idea is used each time it is used to solve the [user-entered] problem?
    br
    form(role='form', id="formVariability" action="/variability", method="post", style='max-width: 600px;', data-idea-doc=idea)
      .slider-container
        .slider-end-labels
          span.no-way No Way
          span.yes-way Yes Way
        #variabilityLabelOne.sliderLabel
        #variabilitySliderOne
      br
      button.btn.btn-success Continue >

  include ../partials/js-includes.jade
  script(type="text/javascript").
    var labelArr = _.range(101).map(function(number){
      return number.toString();
    });
    var initialValue=50, min=1, max=100;

    ////////////////////////////////////////////
    // SET UP SLIDER ONE
    ////////////////////////////////////////////
    $("#variabilitySliderOne").slider({
      value:initialValue,
      min: min,
      max: max,
      step: 1,
      slide: function( event, ui ) {
          $("#variabilityLabelOne").text(labelArr[ui.value]);
          $("#variabilityLabelOne").css("margin-left", (ui.value-min)/(max-min)*100+"%");
          $("#variabilityLabelOne").css("left", "-50px");
      }
    });
    $("#variabilityLabelOne").text(labelArr[initialValue]);
    $("#variabilityLabelOne" ).css("margin-left", (initialValue -1)/(max-min)*100+"%");
    $("#variabilityLabelOne").css("left", "-50px");

    $("button.btn-success").click(function(event){
      var sliderOneValue = $("#variabilitySliderOne").slider("value");
      var inputOne = $("<input>")
               .attr("type", "hidden")
               .attr("name", "variabilitySliderOneValue").val(sliderOneValue);
      $('#formVariability').append($(inputOne)).submit();
    });